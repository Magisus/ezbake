#!/usr/bin/env bash

restartfile=<%= EZBake::Config[:restart_file] %>
timeout="300"

if [ -e $restartfile ];  then
    kill -HUP $(pgrep -f <%= EZBake::Config[:uberjar_name] %>)
    cur=$(head -n 1 $restartfile)
    initial=$cur
    while [ "$cur" == "$initial" ] ;do
        sleep 0.1
        cur=$(head -n 1 $restartfile)

        ((timeout--))
        if [ "$timeout" = 0 ]; then
            echo "Reload timed out"
            exit 1
        fi
    done
else
    echo "Application 'puppetserver' does not support 'reload'"
    exit 1
fi

exit 0
