#!/usr/bin/make -f
# -*- makefile -*-
include /usr/share/cdbs/1/rules/debhelper.mk

BUILD_ROOT=$(CURDIR)/debian/$(cdbs_curpkg)
rubylibdir=$(shell /opt/puppet/bin/ruby -rrbconfig -e "puts RbConfig::CONFIG['sitelibdir']")

export DESTDIR=$(BUILD_ROOT)
export prefix=/opt/puppet
export rubylibdir

install/<%= EZBake::Config[:project] %>::
	echo "PATH IS: ${PATH}"
	make -e install-<%= EZBake::Config[:project] %>

<% EZBake::Config[:terminus_info].each do |proj_name, _| -%>
install/pe-<%= proj_name -%>-terminus::
	make -e install-<%= proj_name -%>-terminus
<% end -%>
